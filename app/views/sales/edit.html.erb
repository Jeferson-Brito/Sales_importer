<h1 class="text-center mb-4">Editar Venda</h1>

<%= form_with(model: @sale, local: true, html: { class: "form" }) do |form| %>
  <% if @sale.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= pluralize(@sale.errors.count, "erro") %> proibiu esta venda de ser salva:</h2>
      <ul>
        <% @sale.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="scrollable mb-3" style="max-height: 400px; overflow-y: auto;">
    <div class="form-group mb-3">
      <%= form.label :purchaser_name, class: "form-label" %>
      <%= form.text_field :purchaser_name, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :item_description, class: "form-label" %>
      <%= form.text_field :item_description, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :item_price, class: "form-label" %>
      <%= form.number_field :item_price, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :purchase_count, class: "form-label" %>
      <%= form.number_field :purchase_count, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :merchant_address, class: "form-label" %>
      <%= form.text_field :merchant_address, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :merchant_name, class: "form-label" %>
      <%= form.text_field :merchant_name, class: "form-control" %>
    </div>
  </div>

  <div class="text-center mb-4">
    <%= form.submit "Atualizar item", class: "btn btn-primary me-2" %>
  </div>
<% end %>

<div class="text-center mb-4 d-flex justify-content-center">
  <%= button_to "Excluir item", sale_path(@sale), method: :delete, data: { confirm: "VocÃª tem certeza que deseja excluir este item?" }, class: "btn btn-danger me-2" %>
</div>
