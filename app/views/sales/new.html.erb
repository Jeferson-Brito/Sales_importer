<h1>Upload de Vendas</h1>

<%= form_with(url: sales_path, local: true, multipart: true) do |form| %>
  <div>
    <%= form.label :file, "Escolha um arquivo" %>
    <%= form.file_field :file %>
  </div>
  <div>
    <%= form.submit "Enviar" %>
  </div>
<% end %>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>
<% if flash[:notice] %>
  <p style="color:green;"><%= flash[:notice] %></p>
<% end %>
